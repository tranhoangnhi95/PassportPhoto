<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangeBackgroundActivity">

    <include
        android:id="@+id/tb_ChangeBackground"
        layout="@layout/layout_toolbar"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_lightest_primary">
        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_gravity="top|right"
            android:background="@null"
            android:id="@+id/btn_CBFresh"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_refresh_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/img_CBImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="80dp"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_gravity="bottom"
            android:background="@color/blur"
            android:padding="2dp">

            <TextView
                android:clickable="true"
                android:id="@+id/txt_CBChangeColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/custom_textview_background"
                android:gravity="center"
                android:text="Đổi màu"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>